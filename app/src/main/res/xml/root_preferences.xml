<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/appearance_header">

        <SwitchPreference
            android:key="dark_mode"
            android:title="Dark mode"
            android:summaryOn="Dark mode enabled"
            android:summaryOff="Dark mode disabled"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Database">

        <Preference
            android:key="clear_database"
            android:title="Clear database"
            android:summary="Clears the notes database" />

    </PreferenceCategory>

</PreferenceScreen>